<% include ./partials/header.ejs %>

<div class="container">
		<h1  style="text-align:center; margin: 20px auto"> Create a New Soccer Stadium</h1>
	<div class="row">
		<div style="width: 30%; margin: 0  auto;">
			<form action="/soccer_stadiums" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="soccer stadium">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" min="0.1" step="0.1" placeholder="price">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="location" placeholder="location">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/soccer_stadiums">Go Back </a>
		</div>
	</div>
</div>
