<% include ./partials/header.ejs %>

<div class="container">
		<h1  style="text-align:center; margin: 20px auto"> Edit Comment</h1>
	<div class="row">
		<div style="width: 30%; margin: 0  auto;">
			<form action="/soccer_stadiums/<%=comment.img_ID%>/comments/<%=comment.ID%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/soccer_stadiums">Go Back </a>
		</div>
	</div>
</div>
