<% include ./partials/header.ejs %>

<div class="container">
		<h1  style="text-align:center; margin: 20px auto"> Edit <%=stadium.name%></h1>
	<div class="row">
		<div style="width: 30%; margin: 0  auto;">
			<form action="/soccer_stadiums/<%=stadium.ID%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="stadium[name]" value="<%=stadium.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="stadium[price]" min="0.1" step="0.1" value="<%=stadium.price%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="stadium[image]" value="<%=stadium.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="stadium[description]" value="<%=stadium.description%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="stadium[location]" value="<%=stadium.location%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/soccer_stadiums">Go Back </a>
		</div>
	</div>
</div>
<% include ./partials/footer.ejs %>
