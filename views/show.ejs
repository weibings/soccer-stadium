<% include ./partials/header.ejs %>
	<div class="container">
		<div class="row">
			<div class="col-md-3 info-list">
				<h4>Yelp Soccer</h4>
				<ul class="list-group">
				    <li class="list-group-item active">Info 1</li>
				    <li class="list-group-item">Info 2</li>
				    <li class="list-group-item">Info 3</li>
				 </ul>
				 <iframe width=100% height="200" frameborder="0" style="border:0"
				  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtvhKecEA8YhBzyD7Yfbl5iuK0qkTUPQ4
				    &q=<%= stadium.location%>" allowfullscreen>
				</iframe>
			</div>
			<div class="col-md-9">
				<div class="card .bg-transparent border-primary">
					<img src="<%= stadium.image %>"  class="card-image-top rounded">
						<div class="card-body">
							<p class="float-right">$<%=stadium.price%>/game</p>
							<h3 class="figure-caption"><%= stadium.name%></h3>
							<p class="description"><%= stadium.description %></p>
							<p>
								<em>Submitted by <%= stadium.author %></em>
							</p>
							<% if(currentUser === stadium.author) {%>
							<a class="btn btn-sm btn-warning" href="/soccer_stadiums/<%=stadium.ID%>/edit">Edit</a>
							<form id="deleteForm" action="/soccer_stadiums/<%=stadium.ID%>?_method=DELETE" method="POST">
								<button class="btn btn-sm btn-danger">Delete</button>
							</form>
							<%}%>
							
					</div>
				</div>
				<div class="row card border-info comments">
					<div class="col-md-12">
						<div>
							<a href="/soccer_stadiums/<%=stadium.ID%>/comments/new" class="btn btn-success float-right">Leave a review</a>
						</div>
						<div class="card-body">
							<br>
							<% comments.forEach(function(comment) {%>
							<p>
								<strong><%= comment.author %></strong> 
								<p><%= comment.text %></p>
								<% if(currentUser === comment.author) {%>
								<a class="btn btn-sm btn-warning" href="/soccer_stadiums/<%=stadium.ID%>/comments/<%=comment.ID%>/edit">Edit</a>
								<form id="commentDeleteForm" action="/soccer_stadiums/<%=stadium.ID%>/comments/<%=comment.ID%>?_method=DELETE" method="POST">
									<button class="btn btn-sm btn-danger">Delete</button>
								</form>
								<%}%>
							</p>
							<hr>
							<%})%>
						</div>
						</div>
				</div>
				
			</div>
			
		</div>
	</div>
<% include ./partials/footer.ejs %>
